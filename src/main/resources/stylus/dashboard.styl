body
	background: #eee
	color: #333
	margin: 0 0 0 20px
	font-size: 14px
	font-family: Lato, sans-serif

.globalErrors
	background: #fcc
	color: #600
	padding: 10px
	margin: 10px
	border: 1px solid #933

.globalErrors p
	margin: 0 0 10px 0

ul
	margin: 0 0 0 0
	padding: 0 0 0 20px
	li
		margin: 0
		padding: 0
.col
	float: left

.nbCols1
	width: 100%

.nbCols2
	width: 50%

.nbCols3
	width: 33%

.nbCols4
	width: 25%

.widget
	background: #fff
	margin: 20px 20px 20px 0
	padding: 20px
	color: #333
	position: relative
	min-height: 200px
	.title
		font-weight: 300
		font-size: 20px
		padding-bottom: 10px
	table
		font-size: 14px
		color: #376C73
		width: 100%
		border-collapse: collapse
		thead
			th
				text-align: left
				padding: 10px 10px 10px 0
				border-bottom: 2px solid #EDF0F0
		tbody
			td
				padding: 10px 10px 10px 0
				border-bottom: 1px solid #EDF0F0
			tr:last-child td
				border-bottom: 0
				padding-bottom: 0
