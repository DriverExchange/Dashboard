body
	background: #F4F4F4
	color: #333
	margin: 0 0 0 20px
	font-size: 14px
	font-family: Lato, sans-serif

.globalErrors
	background: #FFFFFF
	color: #D35B5B
	margin: 20px 20px 0 0
	padding: 20px

.globalErrors p
	margin: 0 0 10px 0

ul
	margin: 0 0 0 0
	padding: 0 0 0 20px
	li
		margin: 0
		padding: 0
.col
	float: left

.nbCols1
	width: 100%

.nbCols2
	width: 50%

.nbCols3
	width: 33%

.nbCols4
	width: 25%

.widget
	background: #fff
	margin: 20px 20px 20px 0
	padding: 20px
	color: #333
	position: relative
	min-height: 200px
	.title
		font-weight: 300
		font-size: 20px
		padding-bottom: 10px
	table
		font-size: 14px
		color: #376C73
		width: 100%
		border-collapse: collapse
		thead
			th
				text-align: left
				padding: 10px 10px 10px 0
				border-bottom: 2px solid #EDF0F0
		tbody
			td
				padding: 10px 10px 10px 0
				border-bottom: 1px solid #EDF0F0
			tr:last-child td
				border-bottom: 0
				padding-bottom: 0

#dashboardNav
	background: #fff
	padding: 20px
	margin-right: 20px
	a
		display: inline-block
		color: #8C8C8C
		background: #F4F4F4
		padding: 10px
		text-decoration: none
		border-radius: 3px
		margin-right: 10px
		&.active
			background: #788A98
			color: #fff

